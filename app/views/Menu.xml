<Alloy>
	<View class="containerMenu">
		<View id="topMenu">
			<View id="logoMenu"></View>
			<Label class="titleEscuela">Universidad Anáhuac de Xalapa</Label>
		</View>
		<ListView id="itemsMenu" defaultItemTemplate="itemTemplate">
			<Templates>
				<ItemTemplate name="itemTemplate">
					<View id="itemMenuContainer" layout="vertical">
						<View class="addsItemMenu" layout="horizontal">
							<Label bindId="badge"></Label>
						</View>
						<Label bindId="itemMenuLabel" class="labelMenu"></Label>	
						<View class="separador">
						</View>				
					</View>
				</ItemTemplate>
			</Templates>
			<ListSection>
				<ListItem itemMenuLabel:text="nuevos"></ListItem>
				<ListItem itemMenuLabel:text="publicar"></ListItem>
				<ListItem itemMenuLabel:text="obtener más"></ListItem>
			</ListSection>
		</ListView>
	</View>
</Alloy>